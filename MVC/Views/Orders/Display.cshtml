@model OrderDisplayModel


<h3>Display</h3>
<br />

@if (Model.Order is null)
{
    <h5>The requested record was not found</h5>
}
else
{
    <table class="table table-striped  col-6">
        <thead class="thead-dark">
            <tr>
                <th>Order Name</th>
                <th>Quantity</th>
                <th>Total</th>
            </tr>
        </thead>

        <tbody class="thead-light">
            <tr>
                <td>@Model.Order.OrderName</td>
                <td>@Model.Order.Quantity</td>
                <td>@Model.Order.Total.ToString("c")</td>
            </tr>
        </tbody>
    </table>  

    <div>
        <a asp-action="Delete" asp-route-id="@Model.Order.Id" class="btn btn-danger">Delete Order</a>
    </div>

    <br />

    <form asp-action="Update">
        <input name="id" value="@Model.Order.Id" type="hidden" />
        <div class=form-group>
            <label>Order Name</label>
            <input name="orderName" value="@Model.Order.OrderName" class="form-control col-6" />
        </div>
        <div class="form-group">
            <input type="submit" value="Update Order Name" class="btn btn-primary" />
        </div>
    </form>
}


